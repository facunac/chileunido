.chiletable {
	font-family: Georgia, "Times New Roman", Times, serif;
	color: #036;
}

.chiletable caption {
	font-size: 25px;
	color: #036;
	font-weight: bolder;
	font-variant: small-caps;
}

.chiletable th {
	font-size: 12px;
	color: #FFF;
	background-color: #023b94;
	padding: 8px 4px;
	border-bottom: 1px solid #015ebc;
}

.chiletable th#descripcion {
    width:700px;

}

.chiletable table {
	margin: 0;
	padding: 0;
	border-collapse: collapse;
	border: 1px solid #06C;
	width: 100%
}

.chiletable th a:link, .chiletable th a:visited {
	color: #FFF;
	text-decoration: none;
	border-left: 5px solid #FFF;
	padding-left: 3px;
}

.chiletable th a:hover, .chiletable th a:active {
	color: #F90;
	text-decoration:underline;
	border-left: 5px solid #F90;
	padding-left: 3px;
}

.chiletable tbody th:hover {
	background-image: url(imgs/tbody_hover.gif);
	background-position: bottom;
	background-repeat: repeat-x;
}

.chiletable td {
	background-color: #f2f2f2;
	padding: 4px;
	font-size: 12px;
}

.chiletable td:hover {
	background-color: #f8f8f8;

}

.chiletable td a:link, .chiletable td a:visited {
	color: #039;
	text-decoration: none;
	border-left: 3px;
	padding-left: 3px;
}

.chiletable td a:hover, .chiletable td a:active {
	color: #06C;
	text-decoration:underline;
	border-left: 3px solid #06C;
	padding-left: 3px;
}

.chiletable td textarea#LinkDescripcion {
    width:800px
}

.chiletable th {
	text-align: left;
}

.chiletable tr {
	border-bottom: 1px solid #CCC;
}

.chiletable thead th {
	background-image: url(imgs/thead_back.gif);
	background-repeat: repeat-x;
	background-color: #06C;
	height: 30px;
	font-size: 18px;
	text-align: center;
	border: 2px;
}

.chiletable tfoot th {
	background-image: url(imgs/tfoot_back.gif);
	background-repeat: repeat-x;
	background-color: #036;
	height: 30px;
	font-size: 28px;
	text-align: center;
}

.chiletable tfoot td {
	background-image: url(imgs/tfoot_back.gif);
	background-repeat: repeat-x;
	background-color: #036;
	color:white;
	height: 30px;
	font-size: 24px;
	text-align: left;
}

__--
.chilediv {
	font-family: Georgia, "Times New Roman", Times, serif;
	color: #036;
}

.chilediv h1 {
	font-size: 25px;
	color: #036;
	font-weight: bolder;
	font-variant: small-caps;
}

.chilediv h2 {
	font-size: 12px;
	color: #000;
	background-color: #fff;
	padding: 1px 1px;
	border-top: 4px solid #D21212;
}

.chilediv h1 {
	text-align:center;
}